<h1>Public::Endusers#show</h1>
 <div class="col-md-8 offset-md-1">
      <h2>マイページ</h2>
        <table class="table">
         <thead>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
          </tr>
         </thead>
          <tbody>
           <% @posts.each do |post| %>
            <tr>
              <td>
                <%# if @enduser.post_image.attached? %>
                 <%#= image_tag @enduser.post_image, size: "200x200" %>
                <%# else %>
                 <%#= image_tag 'no_photo_image.jpg', size: "200x200" %>
               <%# end %>
              </td>
              <td><%= link_to post.title, public_post_path(post.id) %></td>
              <td><%= post.body %></td>
             </tr>
         <% end %>
      </tbody>
     </table>
     <%= link_to "新しい旅の思い出を作る",new_public_post_path %>
     
     <%= link_to "みんなの投稿を見に行く",public_posts_path %>
    </div>
   </div>
  </div>
</main>
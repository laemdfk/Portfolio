<% if flash[:alert] %>
 <div class="alert alert-danger" role="alert">
 <p class="notice text-center" style="color:red;"><%= flash[:alert] %></p></div>
<% end %>
<% if @enduser.errors.any? %>
  <%= @enduser.errors.count %>件のエラーが発生しました
  <ul>
    <% @enduser.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


 <div class="container">
     <div class="row">
       <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  	     <h2>
  	       <i class="fas fa-user-cog"></i>
  	       プロフィール編集
  	      </h2>

           <%= form_with model: @enduser, url: public_enduser_path(@enduser), method: :patch do |f| %>

           <div class="form-group">
         　 <br> <%= f.label :nickname,"ニックネーム" %><br />
            <%= f.text_field :nickname, class: "w-100" %><br/>
           </div>

           <div class="form-group">
            <br><%= f.label :introduction,"自己紹介" %><br/>
             <%= f.text_area :introduction, rows: '5',class: "w-100" %><br/>
           </div>

            <div class="form-group">
             <%= f.label :profile_image,"ユーザー画像" %>
             <!--以下、画像表示用のclass設定。JavaScriptによる管理-->
              <div class="img-upload">
              <div class="left-img-upload">
                <div class="weight-bold-text">
                </div>
                <div class="click-upload">
                 <%= f.file_field :profile_image,multiple: true, id:"idea-image",accept: "image/*" %><br />
                </div>
               </div>
               <div class="right-img-upload">
             <div id="image"></div>
            </div>
           </div>
          </div>


          <div class="form-group">
            <br><%= f.submit '変更を保存する',class:"btn btn-success" %><br />
           </div>

      <div class="menu">
       <%= link_to "Back", public_enduser_path(@enduser) %>
      </div>
      <% end %>
    </div>
  </div>
 <main>
</body>
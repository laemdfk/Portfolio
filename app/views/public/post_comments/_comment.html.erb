<table>
  <tbody>
   <% post.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to public_enduser_path(post_comment.enduser) do %>
         <%= image_tag post_comment.enduser.get_profile_image,size: "60x60" %><br />
         <%= post_comment.enduser.name %>
        <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <td>
        <% if post.comment.enduser == current.enduser %>
         <%= link_to "Destroy",public_post_post_comment_path(post.post_comment),method: :delete,class: "btn btn-danger pull right" %>
        <% end %>
      </td>
    </tr>
   <% end %>
  </tbody>
</table>

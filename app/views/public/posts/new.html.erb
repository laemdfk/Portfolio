<h1>新規投稿</h1>
<%= form_with model: @post_new, url: '/public/posts',method: :post do |f|  %>

   <%= f.label :タイトル %><br>
   <%= f.text_field :title %><br/>
  
 
   <%= f.label :写真 %><br>
   <%= f.file_field :post_image, accept: "image/*" %><br />
  
   <%= f.label :本文 %><br/>
   <%= f.text_area :body %><br/>
  
  <%= f.submit '投稿する' %>
  
 
<% end %>
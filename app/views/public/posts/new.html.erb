<h1>新規投稿</h1>
<% if @post_new.errors.any? %>
  <%= @poat_new.errors.count %>件のエラーが発生しました
  <ul>
    <% @post_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @post_new, url: '/public/posts',method: :post do |f|  %>

   <%= f.label :タイトル %><br>
   <%= f.text_field :title %><br/>


   <%= f.label :写真 %><br>
   <%= f.file_field :post_images,multiple: true, accept: "image/*" %><br />

   <%= f.label :本文 %><br/>
   <%= f.text_area :body %><br/>

  <%= f.submit '投稿する' %>


<% end %>
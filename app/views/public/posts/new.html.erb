<% if flash[:alert] %>
 <div class="alert alert-danger" role="alert">
 <p class="notice text-center" style="color:red;"><%= flash[:alert] %></p></div>
<% end %>

<% if @post_new.errors.any? %>
  <%= @post_new.errors.count %>件のエラーが発生しました
  <ul>
    <% @post_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>新規投稿</h1>

     <%= form_with model: @post_new, url: '/public/posts',method: :post do |f|  %>
     
     <div class="form-group">
      <%= f.label :title,"タイトル" %><br>
      <%= f.text_field :title,class: "w-100" %><br/>
     </div>

     <div class="form-group">
       <%= f.label :post_images,"写真" %><br>
         <div class="img-upload">
          <div class="left-img-upload">
           <div class="weight-bold-text">
           </div>
           <div class="click-upload">
            <%= f.file_field :post_images,multiple: true, id:"idea-image",accept: "image/*" %><br />
           </div>
          </div>
        <div class="right-img-upload">
        <div id="image"></div>
      </div>
     </div>
   </div>

    <div class="form-group">
      <%= f.label :body,"本文" %><br/>
      <%= f.text_area :body,rows: '5',class: "w-100" %><br/>
    </div>
    
    <div class="form-group">
     <%= f.label :address, "場所" %>
     <%= f.text_field :address, class: "w-100" %>
    </div>

    <div class="form-group">
      <%= f.label :name,"タグ(タグは「,」で区切ることで、複数のタグ付けが可能です)" %><br />
      <%= f.text_field :name,class: "w-100" %><br />
    </div>
   
     <%= f.submit '投稿する' %>

    <% end %>
    </div>
  </div>
</div>
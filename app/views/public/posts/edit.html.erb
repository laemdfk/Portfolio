<h1>Public::Posts#edit</h1>
<body>
 <main>
  <p id="notice"></p>
   <% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


   <div class="container">
     <div class="row">
       <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  	     	<h1>投稿編集</h1>

           <%= form_with model: @post, url: public_post_path(@post), method: :patch do |f| %>

           <div class="form-group">
         　 <br> <%= f.label :title,"タイトル" %><br />
            <%= f.text_field :title, :size=>"47" %><br/>
           </div>

           <div class="form-group">
            <br><%= f.label :body,"本文" %><br/>
             <%= f.text_area :body, :size=>"47.5pxx62px" %><br/>
           </div>

           <div class="form-group">
            <%= f.label :post_images,"画像" %>
            <%= f.file_field :post_images, multiple: true, accept: "image/*" %>
           </div>
           
           <div class="form-group">
            <%= f.label :name,"タグ (,で区切ると複数タグ登録できます)" %>
            <%= f.text_field :name, value: @tag_list, class: "form-control" %>  <!--value: @tag_listを設定しておかないと、フォームに何も送られない状態になるので要注意-->
           </div>

          <div class="form-group">
            <br><%= f.submit '変更を保存する',class:"btn btn-success" %><br />
           </div>

      <div class="menu">
       <%= link_to "Show", public_post_path(@post) %>
        |
       <%= link_to "Back", public_posts_path %>
      </div>
      <% end %>
    </div>
  </div>
 <main>
</body>
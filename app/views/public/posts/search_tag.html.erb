<h2>タグ「<%=@tag.name%>」の検索結果</h2>

<div class="container">
 <div class="row">
  <div class="btn-wrapper col-10 mx-auto">
   <table class="table table-hover table-inverse">
    <tbody>
     <% @posts.each do |post| %>
      <tr>
       <td>
        <%= link_to post.title,public_post_path(post.id) %>
       </td>
       <td>
        <%= post.end_user.nickname %>
       </td>
      </tr>
    </tbody>
   <% end %>
  </table>
  </div>
 </div>
</div>

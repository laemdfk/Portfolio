<h1>Public::Posts#index</h1>
<body>
 <main>
    <div class="col-md-6 offset-md-3">
      <h2>みんなの投稿</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
             <th>写真</th>
             <th>投稿者</th>
             <th>タイトル</th>
             <th colspan="3"></th>
             </tr>
           </thead>
            <tbody>
              <% @posts.each do |post| %>
               <tr>
                 <td>
                    <% if @enduser.profile_image.attached? %>
                     <%= image_tag @enduser.profile_image, size: "100x100" %>
                    <% else %>
                      <%= image_tag 'no_image.jpg', size: "100x100" %>
                    <% end %>
                </td>
                <td><%= post.end_user.nickname %></td>
                <td><%= link_to post.title, public_post_path(post.id) %></td>
                </tr>
             <% end %>
           </tbody>
        </table>
      </div>
     </div>
   </div>
  </main>
</body>

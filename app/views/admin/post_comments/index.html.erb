<% if flash[:notice] %>
 <div class="alert alert-success" role="alert">
 <p class="notice text-center" style="color:green;"><%= flash[:notice] %></p></div>
<% end %>
<div class = "container">
  <div class ="row">
    <h3 class ="px-5 bg-light">投稿一覧</h3>
  </div>
  <div class ="row col-lg-10">
    <table class ="table">
      <thead class ="bg-light">
          <tr>
           <th style="width: 20%">投稿日時</th>
           <th style="width: 20%">投稿ユーザー</th>
           <th style="width: 60%">コメント内容</th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= link_to comment.end_user.nickname,admin_post_comment_path(comment.id) %></td>
              <td><%= comment.comment %></td>
          <% end %>
        </tr>
       </tbody>
       <%= paginate @comments %>
    </table>
  </div>

